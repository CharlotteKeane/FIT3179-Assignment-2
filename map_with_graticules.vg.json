{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "background": "#cce5ff",
  "title": {
    "text": "Australia Participants by State, Age, and Sex",
    "fontSize": 24,
    "anchor": "start"
  },
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "AgeSelection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "15-17 years",
          "18-24 years",
          "25-34 years",
          "35-44 years",
          "45-54 years",
          "55-64 years",
          "65 years and over"
        ],
        "name": "Select Age Group: "
      }
    },
    {
      "name": "SexSelection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Male", "Female"],
        "name": "Select Sex: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "Australia.topojson.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "Males.csv", "format": {"type": "csv"}},
      "transform": [
        {
          "filter": "AgeSelection == 'All' || datum.Age == AgeSelection"
        },
        {
          "filter": "SexSelection == 'All' || datum.Sexs == SexSelection"
        }
      ],
      "mark": {
        "type": "circle",
        "stroke": "white",
        "opacity": 0.8,
        "strokeWidth": 0.7
      },
      "encoding": {
        "longitude": {"field": "Lon", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "ParticipationRate",
          "type": "quantitative",
          "title": "Participation Rate",
          "scale": {"range": [100, 2500]}
        },
        "color": {
          "field": "Sexs",
          "type": "nominal",
          "title": "Sex",
          "scale": {
            "domain": ["Male", "Female"],
            "range": ["#1f77b4", "#ff69b4"]
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Age", "type": "nominal"},
          {"field": "Sexs", "type": "nominal"},
          {
            "field": "ParticipationRate",
            "type": "quantitative",
            "title": "Participation Rate"
          }
        ]
      }
    }
  ]
}
