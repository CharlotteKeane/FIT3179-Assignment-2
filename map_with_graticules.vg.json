{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "background": "#cce5ff",
  "title": {
    "text": "Australia Participants in Physical Activity by State, Age, and Sex",
    "fontSize": 24,
    "anchor": "start"
  },
  "projection": {"type": "mercator"},
  "params": [
    {
      "name": "SelectedAge",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "15-17 years",
          "18-24 years",
          "25-34 years",
          "35-44 years",
          "45-54 years",
          "55-64 years",
          "65 years and over"
        ],
        "name": "Select Age Group: "
      }
    },
    {
      "name": "SexSelection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Male", "Female"],
        "name": "Select Sex: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "Australia.topojson.json",
        "format": {"type": "topojson", "feature": "austates"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {"url": "Males.csv", "format": {"type": "csv"}},
      "transform": [
        {"filter": "SelectedAge === 'All' || datum.Age === SelectedAge"},
        {"filter": "SexSelection === 'All' || datum.Sexs === SexSelection"},
        {"calculate": "datum.Sexs === 'Female' ? datum.Lon - 1.5 : datum.Lon", "as": "AdjLon"}
      ],
      "mark": {
        "type": "circle",
        "stroke": "white",
        "opacity": 0.85,
        "strokeWidth": 0.7
      },
      "encoding": {
        "longitude": {"field": "AdjLon", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "ParticipationRate",
          "type": "quantitative",
          "title": "Participation Rate (%)",
          "scale": {"domain": [30, 60], "range": [100, 1000]}
        },
        "color": {
          "field": "Sexs",
          "type": "nominal",
          "title": "Sex",
          "scale": {"domain": ["Male", "Female"], "range": ["#1f77b4", "#ff69b4"]}
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Age", "type": "nominal"},
          {"field": "Sexs", "type": "nominal"},
          {"field": "ParticipationRate", "type": "quantitative", "title": "Participation Rate (%)"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"state": "Western Australia", "lat": -25.5, "lon": 122},
          {"state": "Northern Territory", "lat": -19, "lon": 133},
          {"state": "South Australia", "lat": -30, "lon": 135},
          {"state": "Queensland", "lat": -21, "lon": 145},
          {"state": "New South Wales", "lat": -33, "lon": 147},
          {"state": "Victoria", "lat": -37, "lon": 144},
          {"state": "Tasmania", "lat": -42, "lon": 147}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#000000",
        "dx": 0,
        "dy": -5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "state"}
      }
    }
  ]
}
