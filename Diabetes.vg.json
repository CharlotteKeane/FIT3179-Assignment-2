{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Trend of diabetes prevalence (age-standardised %) by sex, 2000–2021",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Prevalence of Diabetes in Australia (2000–2021)",
    "fontSize": 22,
    "anchor": "start"
  },
  "data": {"url": "Males.csv"},
  "transform": [
    {
      "fold": ["Males_Percent", "Females_Percent", "Persons_Percent"],
      "as": ["Sex", "Percent"]
    }
  ],
  "mark": {"type": "line", "point": true},
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "field": "Percent",
      "type": "quantitative",
      "title": "Age-standardised Prevalence (%)"
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "title": "Sex",
      "scale": {
        "domain": [
          "Males_Percent",
          "Females_Percent",
          "Persons_Percent"
        ],
        "range": ["#1f77b4", "#ff69b4", "#2ca02c"]
      },
      "legend": {
        "title": "Sex",
        "values": [
          "Males_Percent",
          "Females_Percent",
          "Persons_Percent"
        ],
        "labelExpr": "datum.label == 'Males_Percent' ? 'Males' : datum.label == 'Females_Percent' ? 'Females' : 'Persons'"
      }
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {"field": "Sex", "title": "Group"},
      {
        "field": "Percent",
        "type": "quantitative",
        "title": "Prevalence (%)",
        "format": ".1f"
      }
    ]
  }
}
